generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Chef
  Waiter
  Bartender
  Manager
  Cook
  Kitchen_Hand
}

enum LeaveStatus {
  pending
  approved
  rejected
}

model Staff {
  id           String   @id @default(uuid())
  firstname    String
  lastName     String
  role         Role
  email        String   @unique
  phone        String
  availability String[] // stores an array of available days
  // the availability doesn't have types need to look into it later
  // once everything is running please check this to make sure 
  //availability data type is valid when user makes a post request
  // it should be = ['mon', 'tue', 'wed', 'thu', 'fri', 'sat', 'sun']
  //at the moment i'm aware and manually doing it so it's fine 

  shifts        Shift[]
  leaveRequests LeaveRequest[]
}

model Shift {
  id        String   @id @default(uuid())
  staffId   String
  date      DateTime
  startTime String
  endTime   String
  position  String
  staff     Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)
}

model LeaveRequest {
  id          String      @id @default(uuid())
  staffId     String
  startDate   DateTime
  endDate     DateTime
  reason      String
  status      LeaveStatus @default(pending)
  submittedAt DateTime    @default(now())
  staff       Staff       @relation(fields: [staffId], references: [id], onDelete: Cascade)
}

//booking
enum BookingStatus {
  PENDING
  CONFIRMED
  SEATED
  COMPLETED
  CANCELLED
  NO_SHOW
}

// 2. Model to manage Restaurant Tables
model Table {
  id       String @id @default(uuid())
  number   String @unique // e.g. "A1", "12", "Bar-1"
  capacity Int // How many people fit at this table

  bookings Booking[]
}

// 3. The Main Booking Model
model Booking {
  id String @id @default(uuid())

  customerName  String
  customerPhone String

  // Booking Details
  bookingTime    DateTime // Combines Date and Time
  guestCount     Int
  specialRequest String? // e.g. "High chair needed", "Allergy", "GF"
  status         BookingStatus @default(PENDING)

  // Relations
  tableId String? // Nullable so that booking can be taken without necessarily setting a table first.
  table   Table?  @relation(fields: [tableId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
