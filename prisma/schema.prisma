generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Chef
  Waiter
  Bartender
  Manager
  Cook
  Kitchen_Hand
}

enum LeaveStatus {
  pending
  approved
  rejected
}

model Staff {
  id            String         @id @default(uuid())
  firstname     String
  lastName      String
  role          Role
  email         String         @unique
  phone         String
  availability  String[] // stores an array of available days
  shifts        Shift[]
  leaveRequests LeaveRequest[]
}

model Shift {
  id        String   @id @default(uuid())
  staffId   String
  date      DateTime
  startTime String
  endTime   String
  position  String
  staff     Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)
}

model LeaveRequest {
  id          String      @id @default(uuid())
  staffId     String
  startDate   DateTime
  endDate     DateTime
  reason      String
  status      LeaveStatus @default(pending)
  submittedAt DateTime    @default(now())
  staff       Staff       @relation(fields: [staffId], references: [id], onDelete: Cascade)
}
