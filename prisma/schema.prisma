generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  Chef
  Waiter
  Bartender
  Manager
  Cook
  Kitchen_Hand
}

enum LeaveStatus {
  pending
  approved
  rejected
}

enum WeekDay {
  MON
  TUE
  WED
  THU
  FRI
  SAT
  SUN
}

model Staff {
  id                String         @id @default(uuid())
  firstname         String
  lastName          String
  role              Role
  email             String         @unique
  phone             String
  availability      WeekDay[]
  joined_date       DateTime       @default(now())
  shifts            Shift[]
  leaveRequests     LeaveRequest[]
  profile_photo_url String         @default("https://hebbkx1anhila5yf.public.blob.vercel-storage.com/attachments/gen-images/public/male-restaurant-manager-professional-headshot-KxLGqv1Sz4lzQ24KMNzzXLk4u89AEt.jpg")
}

model Shift {
  id        String   @id @default(uuid())
  staffId   String
  date      DateTime
  startTime String
  endTime   String
  position  String
  staff     Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)
}

model LeaveRequest {
  id          String      @id @default(uuid())
  staffId     String
  startDate   DateTime
  endDate     DateTime
  reason      String
  status      LeaveStatus @default(pending)
  submittedAt DateTime    @default(now())
  staff       Staff       @relation(fields: [staffId], references: [id], onDelete: Cascade)
}

//booking
enum BookingStatus {
  PENDING
  CONFIRMED
  SEATED
  COMPLETED
  CANCELLED
  NO_SHOW
}

// 2. Model to manage Restaurant Tables
model Table {
  id       String @id @default(uuid())
  number   String @unique // e.g. "A1", "12", "Bar-1"
  capacity Int // How many people fit at this table

  bookings Booking[]
  orders   Order[]
}

// 3. The Main Booking Model
model Booking {
  id String @id @default(uuid())

  customerName  String
  customerPhone String

  // Booking Details
  bookingTime    DateTime // Combines Date and Time
  guestCount     Int
  specialRequest String? // e.g. "High chair needed", "Allergy", "GF"
  status         BookingStatus @default(PENDING)

  // Relations
  tableId String? // Nullable so that booking can be taken without necessarily setting a table first.
  table   Table?  @relation(fields: [tableId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Menu
enum MenuCategory {
  APPETIZER
  MAIN_COURSE
  DESSERT
  BEVERAGE
  SIDE
  SALAD
}

model MenuItem {
  id          String       @id @default(uuid())
  name        String
  description String?
  priceCents  Int
  category    MenuCategory
  imageUrl    String? // Optional image URL for the menu item
  isAvailable Boolean      @default(true) // Whether the item is currently available

  // Relations
  orderItems OrderItem[]
}

// Order
enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  SERVED
  COMPLETED
  CANCELLED
}

enum OrderType {
  TAKEAWAY
  DINING
  UBER
}

model Order {
  id String @id @default(uuid())

  // Order Details

  // ðŸ”¢ Auto-increment number (DB responsibility)
  orderNo Int @unique @default(autoincrement())

  checkoutSessionId String @unique // ðŸ”’ prevents duplicates orders by checking if order's been made already using the checkout ssession id.

  status           OrderStatus @default(PENDING)
  totalAmountCents Int         @default(0) // Total price of the order

  orderType OrderType @default(DINING)

  customerName String

  // Relations
  tableId String?
  table   Table?  @relation(fields: [tableId], references: [id], onDelete: SetNull)

  // Order Items
  items OrderItem[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderItem {
  id String @id @default(uuid())

  // Item Details
  itemName            String // Keep for backward compatibility, can be derived from MenuItem
  quantity            Int     @default(1)
  unitPriceCents      Int // Price at time of order (snapshot)
  specialInstructions String? // e.g. "No onions", "Extra spicy", "Allergy: Nuts"

  // Relations
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  menuItem   MenuItem? @relation(fields: [menuItemId], references: [id])
  menuItemId String?
}
