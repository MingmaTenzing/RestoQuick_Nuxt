generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  Chef
  Waiter
  Bartender
  Manager
  Cook
  Kitchen_Hand
}

enum LeaveStatus {
  pending
  approved
  rejected
}

model Staff {
  id           String   @id @default(uuid())
  firstname    String
  lastName     String
  role         Role
  email        String   @unique
  phone        String
  availability String[] // stores an array of available days
  // the availability doesn't have types need to look into it later
  // once everything is running please check this to make sure 
  //availability data type is valid when user makes a post request
  // it should be = ['mon', 'tue', 'wed', 'thu', 'fri', 'sat', 'sun']
  //at the moment i'm aware and manually doing it so it's fine 

  shifts        Shift[]
  leaveRequests LeaveRequest[]
}

model Shift {
  id        String   @id @default(uuid())
  staffId   String
  date      DateTime
  startTime String
  endTime   String
  position  String
  staff     Staff    @relation(fields: [staffId], references: [id], onDelete: Cascade)
}

model LeaveRequest {
  id          String      @id @default(uuid())
  staffId     String
  startDate   DateTime
  endDate     DateTime
  reason      String
  status      LeaveStatus @default(pending)
  submittedAt DateTime    @default(now())
  staff       Staff       @relation(fields: [staffId], references: [id], onDelete: Cascade)
}

//booking
enum BookingStatus {
  PENDING
  CONFIRMED
  SEATED
  COMPLETED
  CANCELLED
  NO_SHOW
}

// 2. Model to manage Restaurant Tables
model Table {
  id       String @id @default(uuid())
  number   String @unique // e.g. "A1", "12", "Bar-1"
  capacity Int // How many people fit at this table

  bookings Booking[]
  orders   Order[]
}

// 3. The Main Booking Model
model Booking {
  id String @id @default(uuid())

  customerName  String
  customerPhone String

  // Booking Details
  bookingTime    DateTime // Combines Date and Time
  guestCount     Int
  specialRequest String? // e.g. "High chair needed", "Allergy", "GF"
  status         BookingStatus @default(PENDING)

  // Relations
  tableId String? // Nullable so that booking can be taken without necessarily setting a table first.
  table   Table?  @relation(fields: [tableId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Menu
enum MenuCategory {
  APPETIZER
  MAIN_COURSE
  DESSERT
  BEVERAGE
  SIDE
  SALAD
}

model MenuItem {
  id          String       @id @default(uuid())
  name        String
  description String?
  price       Float
  category    MenuCategory
  imageUrl    String? // Optional image URL for the menu item
  isAvailable Boolean      @default(true) // Whether the item is currently available

  // Relations
  orderItems OrderItem[]
}

// Order
enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  SERVED
  COMPLETED
  CANCELLED
}

model Order {
  id String @id @default(uuid())

  // Order Details
  orderNumber String      @unique // e.g. "ORD-001", "ORD-2025-001"
  status      OrderStatus @default(PENDING)
  totalAmount Float       @default(0) // Total price of the order

  // Relations
  tableId String?
  table   Table?  @relation(fields: [tableId], references: [id], onDelete: SetNull)

  // Order Items
  items OrderItem[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderItem {
  id String @id @default(uuid())

  // Item Details
  itemName            String // Keep for backward compatibility, can be derived from MenuItem
  quantity            Int     @default(1)
  unitPrice           Float // Price at time of order (snapshot)
  specialInstructions String? // e.g. "No onions", "Extra spicy", "Allergy: Nuts"

  // Relations
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  menuItem   MenuItem? @relation(fields: [menuItemId], references: [id])
  menuItemId String?
}
